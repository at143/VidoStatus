<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/ll_internet"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:visibility="gone"
    android:gravity="center"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_6ssp"
        android:visibility="visible"
        app:lottie_autoPlay="true"
        app:lottie_fileName="no_internet.json"
        app:lottie_loop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12ssp"
        android:layout_marginRight="@dimen/_12ssp"
        android:fontFamily="@font/googlesans_bold"
        android:gravity="center"
        android:text="No Internet Connection found"
        android:textColor="@color/textColor"
        android:textSize="@dimen/_12ssp" />

    <TextView
        android:id="@+id/txtnc_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16ssp"
        android:layout_marginTop="@dimen/_16ssp"
        android:layout_marginRight="@dimen/_16ssp"
        android:fontFamily="@font/google_sans_medium"
        android:gravity="center"
        android:text="No internet connection. Make sure that WIFI or mobile data is turned on, then try again."
        android:textColor="@color/textColor"
        android:textSize="@dimen/_9ssp" />
</LinearLayout>
