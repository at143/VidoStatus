<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_6ssp"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/cat_img"
            android:layout_width="@dimen/_45ssp"
            android:layout_height="@dimen/_45ssp"
            android:paddingLeft="@dimen/_2ssp"
            android:paddingTop="@dimen/_4ssp"
            android:paddingRight="@dimen/_2ssp"
            android:paddingBottom="@dimen/_2ssp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/cat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_4ssp"
        android:layout_marginEnd="@dimen/_4ssp"
        android:fontFamily="@font/googlesans_bold"
        android:gravity="center"
        android:singleLine="true"
        android:text="Love"
        android:textColor="@color/black"
        android:textSize="@dimen/_9ssp" />

</LinearLayout>
