<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_77ssp"
    android:orientation="horizontal"
    android:gravity="center"
    android:tag="layout/item_bottom_native_placeholder_0">

    <ImageView
        android:id="@+id/ad_app_icon"
        android:layout_width="@dimen/_45ssp"
        android:layout_height="@dimen/_62ssp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ad_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4ssp"
            android:layout_marginEnd="@dimen/_27ssp"
            android:background="#dddddd"
            android:ellipsize="end"
            android:fontFamily="@font/googlesans_bold"
            android:maxLines="1"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/ad_body"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4ssp"
            android:layout_marginLeft="@dimen/_4ssp"
            android:layout_marginTop="@dimen/_4ssp"
            android:layout_marginEnd="@dimen/_4ssp"
            android:layout_marginRight="@dimen/_4ssp"
            android:background="#dddddd"
            android:ellipsize="end"
            android:fontFamily="@font/googlesans_bold"
            android:maxLines="2"
            android:text="Loading Ad..."
            android:textColor="@color/black30"
            android:textSize="@dimen/_9ssp"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/ad_stars"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2ssp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5"
            android:theme="@style/Theme.Rating.PH" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/ad_advertiser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4ssp"
                android:layout_marginLeft="@dimen/_4ssp"
                android:fontFamily="@font/google_sans_medium"
                android:paddingEnd="@dimen/_4ssp"
                android:paddingRight="@dimen/_4ssp"
                android:textSize="@dimen/_9ssp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ad_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4ssp"
                android:layout_marginLeft="@dimen/_4ssp"
                android:fontFamily="@font/google_sans_medium"
                android:paddingEnd="@dimen/_4ssp"
                android:paddingRight="@dimen/_4ssp"
                android:textSize="@dimen/font_11" />

            <TextView
                android:id="@+id/ad_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4ssp"
                android:layout_marginLeft="@dimen/_4ssp"
                android:fontFamily="@font/google_sans_medium"
                android:paddingEnd="@dimen/_4ssp"
                android:paddingRight="@dimen/_4ssp"
                android:textSize="@dimen/_9ssp" />
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ad_call_to_action"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_31ssp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/_12ssp"
        android:layout_marginRight="@dimen/_12ssp"
        android:background="@drawable/gradient_button"
        android:backgroundTint="@color/white10"
        android:enabled="false"
        android:fontFamily="@font/googlesans_bold"
        android:paddingLeft="@dimen/_12ssp"
        android:paddingRight="@dimen/_12ssp"
        android:textColor="@color/white"
        android:textSize="@dimen/_9ssp"
        android:visibility="visible" />
</LinearLayout>
